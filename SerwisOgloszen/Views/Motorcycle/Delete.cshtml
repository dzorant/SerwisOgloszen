@model Motorcycle

<main class="mt-5 pt-5">
    <div class="container">
        <div>
            <div class="thumbnail">
                <div class="row">
                    <div class="col-md-6">
                        <img alt="@Model.Mark" src="@Model.Photo" height="500" width="500" />
                    </div>
                    <div class="col-md-6">
                        <h3>@Model.Mark - @Model.Model</h3>
                        <h2>Na pewno chcesz usunąć?</h2>
                        <h4 class="pull-right">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="Photo" />
                                <input type="submit" value="Usuń" class="btn btn-danger" />
                                <a asp-action="Index" class="btn btn-success">Powrót</a>
                            </form>
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </main>