@model Motorcycle

<h2>Edytuj ogłoszenie</h2>
<hr />
<div class="container">

    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="UploadFile">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <label class="control-label">Zdjęcie motocykla</label><br />
                <img src="@ViewBag.ImgPath" height="300" width="300" /><br />
                <input type="file" name="file" style="margin-top:10px" />
            </div>
            <div class="form-group">
                <input type="submit" value="Zaladuj zdjecie" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="row">

            <div class="col-md-6">
                <div class="md-form mb-0">
                    <select class="browser-default custom-select">
                        <option value="Sport" selected>Sport</option>
                        <option value="Naked">Naked</option>
                        <option value="Enduro">Enduro</option>
                        <option value="Cross">Cross</option>
                        <option value="Chopper">Chopper</option>
                        <option value="Cruiser">Cruiser</option>
                        <option value="Custom">Custom</option>
                        <option value="Stunt">Stunt</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">

            </div>

        </div>
        <div class="row">

            <div class="col-md-6">
                <div class="md-form mb-0">
                    <input asp-for="Mark" type="text" class="form-control">
                    <label asp-for="Mark" class="">Marka</label>
                    <span asp-validation-for="Mark" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="md-form mb-0">
                    <input asp-for="Model" type="text" class="form-control">
                    <label asp-for="Model" class="">Model</label>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row">

            <div class="col-md-6">
                <div class="md-form mb-0">
                    <input asp-for="Price" type="number" class="form-control">
                    <label asp-for="Price" class="">Cena</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="md-form mb-0">
                    <input asp-for="Year" type="number" class="form-control">
                    <label asp-for="Year" class="">Rok Produkcji</label>
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="row">

            <div class="col-md-6">
                <div class="md-form mb-0">
                    <input asp-for="EngineSize" type="number" class="form-control">
                    <label asp-for="EngineSize" class="">Pojemność silnika</label>
                    <span asp-validation-for="EngineSize" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="md-form mb-0">
                    <input asp-for="Power" type="number" class="form-control">
                    <label asp-for="Power" class="">Moc</label>
                    <span asp-validation-for="Power" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="row">

            <div class="col-md-6">
                <div class="md-form mb-0">
                    <input asp-for="Mileage" type="number" class="form-control">
                    <label asp-for="Mileage" class="">Przebieg (w km)</label>
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="md-form mb-0">
                    <input asp-for="Colour" type="text" class="form-control">
                    <label asp-for="Colour" class="">Kolor</label>
                    <span asp-validation-for="Colour" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="row">

            <div class="col-md-6">
                <div class="md-form mb-0">
                    <input asp-for="PhoneNumber" type="tel" class="form-control">
                    <label asp-for="PhoneNumber" class="">Numer telefonu</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="md-form mb-0">
                    <input asp-for="Location" type="text" class="form-control">
                    <label asp-for="Location" class="">Miasto</label>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>

        </div>


        <div class="md-form">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="md-textarea form-control" id="exampleFormControlTextarea2" rows="3">Opis</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Photo" value="@ViewBag.ImgPath" />
        <div class="form-group">
            <input type="submit" value="Edytuj ogłszenie" class="btn btn-success" style="margin-top:30px" />
            <a asp-action="Index" class="btn btn-danger pull-right" style="margin-top:30px">Powrót</a>
        </div>
</div>
    </form>
</div>