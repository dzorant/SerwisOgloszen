        <section class="text-center">

            <div class="row mb-4 wow fadeIn">

                @foreach (var motorcycle in Model.Motorcycle)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="view overlay">
                                <img src="@motorcycle.Photo" class="card-img-top" alt="@motorcycle.Mark - @motorcycle.Model">
                                <a asp-controller="Motorcycle" asp-action="Details" asp-route-id="@motorcycle.Id">
                                    <div class="mask rgba-white-slight"></div>
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title"><a asp-controller="Motorcycle" asp-action="Details" 
                            asp-route-id="@motorcycle.Id">@motorcycle.Mark  @motorcycle.Model</a></h4>
                        </div>
                    </div>
                }

        </section>
