<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Motocykle - Serwis Ogłoszeń</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="~/css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="~/css/style.min.css" rel="stylesheet">

</head>

<body>

    <!--Main Navigation-->
    <header>

        <!-- Navbar -->
        <nav class="navbar fixed-top navbar-expand-lg navbar-light white scrolling-navbar">
            <div class="container">

                <!-- Brand -->
                <a asp-controller="Home" asp-action="Index" class="navbar-brand waves-effect">
                    <strong class="red-text">Motocykle</strong>
                </a>

                <!-- Collapse -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">



                </div>
                @if (SignInManager.IsSignedIn(User))
                {
                    <!-- USER -->
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a a id="loginLink" asp-controller="Home" asp-action="Index" class="nav-link waves-effect">
                                Home
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav nav-flex-icons">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-default"
                                 aria-labelledby="navbarDropdownMenuLink-333">
                                <a asp-controller="Motorcycle" asp-action="Create" class="dropdown-item">Dodaj ogłoszenie</a>
                                <a asp-controller="Motorcycle" asp-action="Index" class="dropdown-item">Edytuj ogłoszenie</a>
                                <a class="dropdown-item">_______</a>
                                <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
                                      method="post">
                                    <ul class="dropdown-item">
                                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Wyloguj</a></li>
                                    </ul>
                                </form>
                            </div>
                        </li>
                    </ul>
                    <!-- // END USER -->
                }
                else
                {
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a a id="loginLink" asp-controller="Home" asp-action="Index" class="nav-link waves-effect">
                                Home
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="loginLink" asp-controller="Account" asp-action="Login" class="nav-link waves-effect">Logowanie</a>
                        </li>
                        <li class="nav-item">
                            <a id="registerLink" asp-controller="Account" asp-action="Register" class="nav-link waves-effect">Rejestracja</a>
                        </li>
                    </ul>
                }
            </div>
        </nav>
        <!-- Navbar -->

    </header>
    <!--Main Navigation-->
    @RenderBody()


    <!--Footer-->
    <footer class="page-footer text-center font-small mdb-color darken-2 mt-4 wow fadeIn">

      

        <hr class="my-4">

        <!-- Social icons -->
        <div class="pb-4">
            <a href="https://www.facebook.com/" target="_blank">
                <i class="fab fa-facebook-f mr-3"></i>
            </a>

            <a href="https://twitter.com/" target="_blank">
                <i class="fab fa-twitter mr-3"></i>
            </a>

            <a href="https://www.youtube.com/" target="_blank">
                <i class="fab fa-youtube mr-3"></i>
            </a>

            <a href="https://plus.google.com/" target="_blank">
                <i class="fab fa-google-plus-g mr-3"></i>
            </a>
        </div>
        <!-- Social icons -->
        <!--Copyright-->
        <div class="footer-copyright py-3">
            © 2019 Copyright:
            Motocykle - Serwis Ogłoszeniowy
        </div>
        <!--/.Copyright-->

    </footer>
    <!--/.Footer-->
    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="js/mdb.min.js"></script>
    <!-- Initializations -->
    <script type="text/javascript">
        // Animations initialization
        new WOW().init();

    </script>
</body>

</html>
